{
  "name": "kanote",
  "version": "0.1.341",
  "private": true,
  "description": "Kaban Board Quick personal app",
  "author": "Johnny Prescott",
  "build": {
    "appId": "none"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "ba64": "^3.0.9",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "electron": "^12.0.5",
    "electron-acrylic-window": "^0.5.5",
    "electron-builder": "^22.10.5",
    "electron-is-dev": "^2.0.0",
    "image-to-base64": "^2.2.0",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-lorem-ipsum": "^1.4.9",
    "react-markdown": "^6.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "react-select": "^4.3.1",
    "react-transition-group": "^4.4.2",
    "remark-gfm": "^1.0.0",
    "uuid": "^8.3.2",
    "wait-on": "^5.3.0",
    "web-vitals": "^1.1.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=always",
    "build": "npm run react-build && npm run electron-build && npm --no-git-tag-version version minor",
    "start": "concurrently \"npm --no-git-tag-version version patch\" \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . --inspect=5858 --remote-debugging-port=9222\""
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "camelcase": [
        "error",
        {
          "properties": "always"
        }
      ],
      "id-match": [
        "error",
        "(^[A-Za-z][a-z]*([A-Z][a-z]+)*([0-9]{0,2}|[A-Z])$|JSON)",
        {
          "properties": false,
          "ignoreDestructuring": false,
          "onlyDeclarations": true
        }
      ],
      "array-bracket-newline": "error",
      "array-bracket-spacing": "error",
      "array-callback-return": "off",
      "block-spacing": "error",
      "brace-style": "error",
      "comma-dangle": "error",
      "computed-property-spacing": "error",
      "func-call-spacing": "error",
      "func-name-matching": "error",
      "no-useless-escape": "off",
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-quotes": "error",
      "key-spacing": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "object-curly-newline": "error",
      "prefer-object-spread": "error",
      "keyword-spacing": "error",
      "no-trailing-spaces": "error",
      "prefer-const": "error",
      "no-const-assign": "error",
      "no-duplicate-imports": "error",
      "prefer-arrow-callback": "error",
      "react/jsx-pascal-case": "error",
      "react-hooks/exhaustive-deps": "off",
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function"
        }
      ],
      "react/style-prop-object": "error",
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "fragment": "Fragment",
        "version": "detect",
        "flowVersion": "0.53"
      },
      "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        },
        {
          "property": "myFavoriteWrapper"
        }
      ],
      "linkComponents": [
        "Hyperlink",
        {
          "name": "Link",
          "linkAttribute": "to"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-class-pattern": "(^([a-z][a-z0-9]*)((-|_){1,2}[a-z0-9]+)*$|^css.*$)",
      "value-keyword-case": [
        "lower",
        {
          "ignoreKeywords": [
            "/.*/"
          ]
        }
      ],
      "color-hex-case": "upper",
      "declaration-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-declaration",
            "first-nested"
          ]
        }
      ],
      "indentation": 4,
      "order/properties-order": [
        [],
        {
          "severity": "warning"
        }
      ],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": true,
          "severity": "warning"
        }
      ]
    },
    "plugins": [
      "stylelint-order",
      "stylelint-config-rational-order/plugin"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.23.2",
    "react-syntax-highlighter": "^15.4.3",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0"
  }
}
